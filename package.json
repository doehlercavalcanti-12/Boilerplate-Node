{
  "name": "boilerplate-node",
  "version": "0.1.0",
  "description": "Production-grade Fastify + Prisma boilerplate with security, observability, and CI/CD.",
  "type": "module",
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc --project tsconfig.json",
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "type-check": "tsc --noEmit",
    "test": "cross-env NODE_ENV=test jest --config jest.config.ts --coverage",
    "test:watch": "cross-env NODE_ENV=test jest --config jest.config.ts --watch",
    "e2e": "cross-env NODE_ENV=test jest --config jest.e2e.config.ts --runInBand",
    "playwright": "playwright test",
    "migrate": "prisma migrate deploy",
    "migrate:dev": "prisma migrate dev",
    "generate": "prisma generate",
    "seed": "prisma db seed",
    "prepare": "husky install",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "coverage:report": "jest --config jest.config.ts --coverage --coverageReporters=text-summary,lcov",
    "docker:build": "docker build --build-arg NODE_ENV=production -t boilerplate-node:latest .",
    "security:owasp": "npm run lint && npm run test && npm run playwright && npm run docker:build"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/csrf-protection": "^7.1.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/jwt": "^10.0.0",
    "@fastify/oauth2": "^8.1.2",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/sensible": "^6.0.3",
    "@fastify/swagger": "^9.5.2",
    "@fastify/swagger-ui": "^5.2.3",
    "@prisma/client": "^6.0.0",
    "@sentry/node": "^8.0.0",
    "@sentry/profiling-node": "^8.0.0",
    "argon2": "^0.40.3",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "fastify": "^5.0.0",
    "hpp": "^0.2.3",
    "jose": "^5.8.0",
    "pino": "^9.2.0",
    "pino-abstract-transport": "^1.1.0",
    "rotating-file-stream": "^3.2.5",
    "sanitize-html": "^2.12.1",
    "zod": "^3.23.8",
    "@sinclair/typebox": "^0.32.30",
    "fastify-metrics": "^12.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.0",
    "@types/hpp": "^0.2.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.0",
    "@types/sanitize-html": "^2.12.3",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "eslint": "^9.5.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.9",
    "pino-pretty": "^11.2.2",
    "prettier": "^3.3.3",
    "prisma": "^6.0.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.11.0",
    "typescript": "^5.5.3",
    "globals": "^16.4.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --max-warnings=0"
    ],
    "*.{ts,tsx,json,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 0.9,
        "functions": 0.9,
        "lines": 0.9,
        "statements": 0.9
      }
    }
  },
  "prisma": {
    "seed": "tsx prisma/seed/index.ts"
  }
}
