{
  "name": "boilerplate-node",
  "version": "0.1.0",
  "description": "Production-grade Fastify + Prisma boilerplate with security, observability, and CI/CD.",
  "type": "module",
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc --project tsconfig.json",
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "type-check": "tsc --noEmit",
    "test": "cross-env NODE_ENV=test jest --config jest.config.ts --coverage",
    "test:watch": "cross-env NODE_ENV=test jest --config jest.config.ts --watch",
    "e2e": "cross-env NODE_ENV=test jest --config jest.e2e.config.ts --runInBand",
    "playwright": "playwright test",
    "migrate": "prisma migrate deploy",
    "migrate:dev": "prisma migrate dev",
    "generate": "prisma generate",
    "seed": "prisma db seed",
    "prepare": "husky install",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "coverage:report": "jest --config jest.config.ts --coverage --coverageReporters=text-summary,lcov",
    "docker:build": "docker build --build-arg NODE_ENV=production -t boilerplate-node:latest .",
    "security:owasp": "npm run lint && npm run test && npm run playwright && npm run docker:build"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/csrf-protection": "^7.1.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/jwt": "^10.0.0",
    "@fastify/oauth2": "^8.1.2",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/sensible": "^6.0.3",
    "@fastify/swagger": "^9.5.2",
    "@fastify/swagger-ui": "^5.2.3",
    "@prisma/client": "^6.18.0",
    "@sentry/node": "^10.22.0",
    "@sentry/profiling-node": "^10.22.0",
    "@sinclair/typebox": "^0.34.41",
    "argon2": "^0.44.0",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.1",
    "fastify-metrics": "^12.1.0",
    "hpp": "^0.2.3",
    "jose": "^6.1.0",
    "pino": "^10.1.0",
    "pino-abstract-transport": "^3.0.0",
    "rotating-file-stream": "^3.2.7",
    "sanitize-html": "^2.17.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@swc/core": "^1.14.0",
    "@swc/jest": "^0.2.39",
    "@types/hpp": "^0.2.7",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.2",
    "@types/sanitize-html": "^2.16.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.6",
    "pino-pretty": "^13.1.2",
    "prettier": "^3.6.2",
    "prisma": "^6.18.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --max-warnings=0"
    ],
    "*.{ts,tsx,json,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 0.9,
        "functions": 0.9,
        "lines": 0.9,
        "statements": 0.9
      }
    }
  },
  "prisma": {
    "seed": "tsx prisma/seed/index.ts"
  }
}
